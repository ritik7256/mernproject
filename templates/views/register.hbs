<div class="w-80% h-screen bg-gray-600 grid place-content-center">
   <h1> Employee Registration Form</h1>

    <div>
        <form action="/register" method="post"> 

          

            <div class="flex gap-3 mt-3 text-black"> 
                <input type="text" placeholder="First Name" class="px-3 py-3 bg-beige-200 text-black rounded-lg" name="firstname">
                <input type="text" placeholder="Last Name" class="px-3 py-3 bg-beige-200 text-black rounded-lg" name="lastname" >

            </div>
            <div class="flex gap-3 mt-3 text-black"> 
                <input type="email" placeholder="Your Email" class="px-3 py-3 bg-beige-200 text-black rounded-lg " name="email">
                <div class="gender-toggle">
    <label>
        <input type="radio" name="gender" value="male" checked name="gender">
        Male
    </label>
    <label>
        <input type="radio" name="gender" value="female" name="gender">
        Female
    </label>
</div>


            </div>
            <div class="flex gap-3 mt-3 text-black"> 
                <input type="text" placeholder="Your Phone" class="px-3 py-3 bg-beige-200 text-black rounded-lg" name="Phone">
                <input type="text" placeholder="Enter Your Age" class="px-3 py-3 bg-beige-200 text-black rounded-lg"  name="age">

            </div>
            <div class="flex gap-3 mt-3 text-black"> 
                <input type="password" placeholder="Password" class="px-3 py-3 bg-beige-200 text-black rounded-lg" name="password">
                <input type="password" placeholder="Confirm Password" class="px-3 py-3 bg-beige-200 text-black rounded-lg" name="confirmpassword">

            </div>

            <button  class="px-3 py-2 bg-blue-300 rounded-md mt-3  " type="submit">Register</button>
        </form>
    </div>

</div>

</body>
</html>